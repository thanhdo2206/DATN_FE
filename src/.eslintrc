{
  "extends": ["react-app", "prettier"],
  "plugins": ["prettier", "sort-exports"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "always",
        "semi": false,
        "trailingComma": "none",
        "tabWidth": 2,
        "endOfLine": "auto",
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 80,
        "jsxSingleQuote": true,
        "importOrder": ["^components/(.*)$", "^[./]"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    ],
    "sort-exports/sort-exports": ["warn", { "sortDir": "asc" }],
    "react-hooks/exhaustive-deps": 0
  }
}
